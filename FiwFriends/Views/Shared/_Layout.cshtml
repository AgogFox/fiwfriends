<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - FiwFriends</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FiwFriends.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
</head>
<body style=" margin:0">
    <header>
        <nav class="navigation">
            <div class="item1"><a href="" style="text-decoration: none;">Home</a></div>
            <div class="item3">
                <form style="width: 100%;display:flex;" action="">
                    <input style="width: 60%; margin-right:1%;" type="text" name="" id="search" placeholder="Country,City">
                    <button style="width: 20%;"><img width=" 50% " src="https://i.ibb.co/DMpFfcV/search.png" alt="search" border="0"></button>
                </form>
            </div>
            <div class="item2">
                <button class="navitem">
                    <img src="https://i.ibb.co/YZ3R5hX/plus.png" alt="plus" border="0">
                </button>
                <button class="navitem"><a style="text-decoration: none;font-weight: bold;">Login</a></button>
                <button class="navitem signup">Sign Up</button>
                <button class="navitem setting">
                    <img src="https://i.ibb.co/KqG7Dxj/settings.png" alt="settings" border="0">
            </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="foot">
            &copy; 2024 - FiwFriends - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@{
    ViewData["Title"] = "Search Page";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap"
          rel="stylesheet">
</head>
<style>
    /* Start of Navigation bar */
    * {
    font-family: "Josefin Sans", sans-serif;
    font-optical-sizing: auto;
    font-style: normal;
    color: black;
}
    /* End of Navigation bar */
    b {
        font-size: 3vh;
    }


    .container{
            display:block;
            padding:4%;
    }
    .main-flex-container{
        display:flex;
    }
    #main {
        width: 75%;
        height: 100%;
        border: 1px solid white; @*debugg here*@
        padding-left: 2%;
        padding-right: 2%;
        margin-top:7vh;
    }

    .flex-container {
        display: flex;
        background-color: white; @*debugg here*@
        width: 100%;
    }

    .image {
        width: 30%
    }

    .image img {
        width: 100%;
        border-radius: 0px 10px 10px 0px;
    }

    .detail {
        width: 100%
    }
    .detail h1{
        font-size:3vh;
    }

    .flex-container>div {
        background-color: white;
        margin: 1%;
        padding: 1%;
        font-size: 2vh;
    }

    #ad {
        width: 25%;
        height: 100%;
        border: 1px solid white;
        padding: 15px;
    }

    .flex {
        display: flex;
        flex-direction: column;
        background-color: white;
        margin-top: 10%;
        width: 100%;
    }

    .flex>div {
        background-color: white;
        width: 100%;
        margin: 0%;
    }

    .flex img {
        width: 100%;
    }

    .flex-column {
        display: flex;
        flex-direction: column;
        width: 20%;
    }

    .flex-column>div {
        background-color: white;
        width: 100%;
        margin: 0%;
        height: 100%;
        text-align: center;
    }

    .timeleft{
        color: gray;
        font-weight: bold;
         font-size: 2vh;
    }
    .attendees{
        font-weight: bold;
        font-size: 2vh;
        padding-top: 80%;
    }

    .close {
        float: right;
        margin-left: 100%;
    }
    .close:hover{
            background-color:red;
            color:white;
        }

    @@media screen and (max-width: 700px) {
        form{
            margin-top: 1vh;
        }
        .item1{
                padding-top: 2%;
                width: 30%;
                justify-content: center;
        }
        .header {
            text-align: center;
            justify-content: center;
            font-size: 4vh;
        }

        #main {
            width: 100%;
            align-items: center;
            margin-top: 3vh;
        }

        @*advisment*@
        .flex {
                display: flex;
                flex-direction: column;
                background-color: DodgerBlue;
            }

            .flex>div {
                background-color: #f1f1f1;
                width: 100px;
                margin: 0%;
                text-align: center;
                line-height: 75px;
                font-size: 30px;
            }

        @*.flex-container{display:block;}.image{width:100%;}*@
        .flex-container {
                display: flex;
                background-color: white;
                width: 100%;
            }

            .image {
                width: 40%
            }

            .image img {
                width: 100%;
            }

            .detail {
                width: 60%
            }

            #ad {
                display: none;
            }
    }
</style>
<body>
    @*---------------------- Navigation bar ----------------------*@
    @*---------------------- End Navigation bar here ----------------------*@

    @*---------------------- this is main page ----------------------*@
    @if (Model == null)
    {
        <h1 style="display:none">Model null</h1>
    }
    else{
            @if (@ViewBag.errormsg == "Can not found")
            {
                <h1 class="container">Can not found</h1>
            }
            else
            {
                    <div class="container">
                    <div>
                        <b>Event near</b>
                        <b>@ViewBag.word</b>
                    </div>
                    <div class="main-flex-container">
                        <div id="main">
                            @foreach(var e in Model)
                            {
                                <hr>
                                <a asp-action="ShowEvent" asp-controller="Event" asp-route-title="@e.title" style="text-decoration:none;">
                                <div class="flex-container" onclick="">
                                    <div class="image">
                                        <img class="image"
                                            src="https://images.unsplash.com/photo-1492684223066-81342ee5ff30?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                                            alt="event concert">
                                    </div>
                                    <div class="detail">
                                        <p>@e.date_time</p>
                                        <h1>@e.title</h1>
                                        <p style="display: inline;">Host by : @e.host_by</p><br>
                                        <p style="display: inline;">Location : @e.location</p><br>
                                        @if (@e.is_open == false)
                                        {
                                            <span style="display: inline;color:red">Status: close</span><br>
                                        }
                                        else{
                                            <span style="display: inline;color:limegreen">Status: open</span><br>
                                        }
                                    </div>
                                    <div class="flex-column">
                                        <div class="timeleft">
                                            <p style="display: inline;">Time left : @e.time_left() Days</p>
                                        </div>
                                        <div class="attendees">
                                            <p style="display: inline;">@e.attendees.Count Attendees</p>
                                        </div>
                                    </div>
                                </div>
                                </a>
                                <hr>
                            }
                        </div>
                        <div id="ad">
                            <button onclick="Closead()" class="close">x</button>
                            <div class="flex">
                                <div>
                                    <img src="https://i.ibb.co/G9RyqYy/IMG-8587.jpg" alt="panan2" border="0">
                                </div>
                                <div>
                                    <img src="https://iili.io/JMMQbMN.md.png" alt="panan1" border="0">
                                </div>
                                <div>
                                    <img src="https://i.ibb.co/0rtgr3L/images.jpg" alt="images" border="0">
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
          }
    }
    @*---------------------- End main page here ----------------------*@
</body>
<script>
    var m = document.getElementById('main');

    function Closead() {
        document.getElementById('ad').remove();

    }
</script>
@model FiwFriends.Models.OldNewpassword;
@{
    ViewData["Title"] = "Edit password";
}
<!DOCTYPE html>
<html lang="en"/>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            font-family: "Josefin Sans", sans-serif;
            font-optical-sizing: auto;
            font-style: normal;
        }

        body {
            background-color: #F6F2D2;
        }

        }

        .container {
            margin-top: 4vh;
        }

            .container .rectangle h1 {
                font-weight: 700;
                margin-left: 6vw;
            }

        section {
            display: inline-flex;
            padding: 0%;
        }

        .container .rectangle {
            width: 80vw;
            height: 70vh;
            background-color: white;
            border-radius: 20px;
            box-shadow: 5px 10px 5px grey;
            position: relative;
        }

        .input {
        @*margin-top: 10vh; margin-left: 15vw;*@ width:100%;
            margin-left: 12vw;
            margin-top: 10vh;
        }

        input {
            margin-bottom: 4vh;
            width: 50%;
            border-radius: 5px;
            padding-top: 1%;
            padding-bottom: 1%;
        }

        .button {
            width: 50%;
            height: 20%;
            text-align: center;
            border: none;
            padding-top: 1vh;
            padding-bottom: 1vh;
            border-radius: 10px;
            color: white;
            background-color: black;
            margin-top: 5%;
        }

            .button:hover {
                color: white;
                background-color: #FD5C37;
                box-shadow: 2px 5px 2px grey;
            }

            .button:active {
                background-color: #FD5C37;
                box-shadow: 0 5px grey;
                transform: translateY(4px);
            }

        .column {
            float: left;
            width: 50%;
        }

        .pic {
            width: 35vw;
            height: 70vh;
            object-fit: scale-down;
        }

        @@media screen and (max-width: 600px) {
            .container .rectangle h1 {
                margin-left: 15%;
            }

            .input {
                margin-left: 20vw;
            }

            input {
                width: 50%;
            }

            .button {
                margin-left: 0%;
                width: 50%
            }

            .pic {
                display: none;
            }

            .column {
                width: 100%;
            }

            span {
            }
        }
    </style>
</head>
<body>
    <div class="big-rectangle">
        <h1 style="font-family: Istok Web, 'Source Sans Pro'">Edit profile.</h1>
        <div style="display:flex;justify-content:space-between">
            <form method="post" enctype="multipart/form-data" asp-controller="Edit" asp-action="EditPassword" class="big-rectangle" style="width:60%;">
                <div>
                    <label asp-for="OldPassword"></label>
                    <br />
                    <input type="text" asp-for="OldPassword" class="rectangle-input" />
                </div>
                <div>
                    <label asp-for="NewPassword"></label>
                    <br />
                    <input type="text" asp-for="NewPassword" class="rectangle-input" />
                </div>
                <button type="submit" class="submit-button">submit</button>
            </form>
        </div>
    </div>
</body>


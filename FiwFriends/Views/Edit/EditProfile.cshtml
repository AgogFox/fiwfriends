@model FiwFriends.Models.Usersystem;
@{
    ViewData["Title"] = "Edit profile";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>
        function prefill() {
            var xmlhttp = new XMLHttpRequest();
            xmlhttp.onreadystatechange = function () {
                if (xmlhttp.readyState == 4 && xmlhttp.status == 200) {
                    var user = JSON.parse(xmlhttp.responseText);
                    document.getElementById("name").value = user.name;
                    document.getElementById("location").value = user.location;
                    document.getElementById("aboutme").value = user.aboutMe;
                    document.getElementById("interest").value = user.interest;
                }
            };
            xmlhttp.open("GET", "/Edit/Getuser");
            xmlhttp.send();
        }
        window.onload = function () {
            prefill();
        }
    </script>
    <style>
        /* Specific container for edit profile styles */
        .edit-profile-container {
            background-color: #f6f2d2;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

            .edit-profile-container .big-rectangle {
                margin: auto;
                width: 50vw;
                max-width: 600px;
                height: auto;
                padding: 30px;
                background-color: #ffffff;
                box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                border-radius: 20px;
            }

            .edit-profile-container h1 {
                font-size: 24px;
                margin-bottom: 20px;
                text-align: center;
            }

            .edit-profile-container form {
                display: flex;
                flex-direction: column;
                align-items: center;
            }

            .edit-profile-container label {
                font-weight: bold;
                margin-bottom: 10px;
                text-align: center;
            }

            .edit-profile-container input[type="text"],
            .edit-profile-container input[type="file"],
            .edit-profile-container select {
                width: 100%;
                padding: 10px;
                margin-bottom: 20px;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-sizing: border-box;
            }

                .edit-profile-container select[multiple] {
                    height: 120px;
                }

            .edit-profile-container .submit-button {
                width: 100%;
                max-width: 200px;
                padding: 10px;
                background-color: #FD5C37;
                border: none;
                border-radius: 10px;
                color: #ffffff;
                font-size: 16px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s;
            }

                .edit-profile-container .submit-button:hover {
                    background-color: #ff704d;
                }
    </style>
</head>
<body>
    <div class="edit-profile-container">
        <div class="big-rectangle">
            <h1>Edit profile</h1>
            <form method="post" enctype="multipart/form-data" asp-controller="Edit" asp-action="EditProfile">
                <div>
                    <label asp-for="Picture">Profile Picture</label>
                    <input type="file" asp-for="Picture" id="picture" accept="image/*" />
                    <img id="picturePreview" src="@Model.Picture_url" alt="Preview" style="display: none; max-width: 200px; margin-top: 10px;"/>
                </div>
                <div>
                    <label asp-for="Name">Name</label>
                    <input type="text" asp-for="Name" id="name" placeholder="Enter your name" />
                </div>
                <div>
                    <label asp-for="Location">Location</label>
                    <input type="text" asp-for="Location" id="location" placeholder="Enter your location" />
                </div>
                <div>
                    <label asp-for="Interest">interest</label>
                    <input type="text" asp-for="Interest" id="interest" placeholder="Enter your Interest" />
                </div>
                <div>
                    <label asp-for="AboutMe">About me</label>
                    <input type="text" asp-for="AboutMe" id="aboutme" />
                </div>
                <button type="submit" class="submit-button">Submit</button>
            </form>
        </div>
    </div>
    <script>
        // Preview the selected image
        document.getElementById("picture").onchange = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('picturePreview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        };
    </script>
</body>
</html>

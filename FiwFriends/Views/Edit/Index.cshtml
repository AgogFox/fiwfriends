<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        html, body {
            justify-content: center;
            align-items: center;
        }

        .button-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-right: 25vh;
        }

        .button {
            display: flex;
            padding: 20px 25%;
            text-align: center;
            text-decoration: none;
            outline: none;
            border-radius: 15px;
            cursor: pointer;
            align-self: center;
            margin: 25px 0px;
            background-color: #FFE4C4;
            box-shadow: 0 9px #999;
        }

            .button:hover {
                background-color: #FF7F50
            }

            .button:active {
                background-color: #FF7F50;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }
    </style>
</head>
<body>
    <div class="button-container">
        <button class="button" id="editProfileButton" asp-controller="Edit" asp-action="EditProfile">Edit Profile</button>
        <button class="button" id="editPasswordButton" asp-controller="Edit" asp-action="EditPassword">Edit Password</button>
        <button class="button" id="deleteProfileButton">Delete Profile</button>
    </div>

    <script>
        document.getElementById("editProfileButton").addEventListener("click", function () {
            window.location.href = "/Edit/EditProfile";
        });

        document.getElementById("editPasswordButton").addEventListener("click", function () {
            window.location.href = "/Edit/EditPassword";
        });

        document.getElementById("deleteProfileButton").addEventListener("click", function () {
            if (confirm("Are you sure you want to delete your profile?")) {
                deleteProfile();
            }
        });

        function deleteProfile() {
            var xhr = new XMLHttpRequest();
            xhr.open("POST", "/Edit/DeleteProfile", true);
            xhr.onreadystatechange = function () {
                if (xhr.readyState === XMLHttpRequest.DONE) {
                    if (xhr.status === 200) {
                        alert("Profile deleted successfully.");
                        window.location.reload();
                    } else {
                        alert("Failed to delete profile. Please try again later.");
                    }
                }
            };
            xhr.send();
        }
    </script>
</body>
</html>
